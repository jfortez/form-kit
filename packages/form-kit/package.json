{
  "name": "@form-kit/form-kit",
  "version": "0.0.1",
  "type": "module",
  "description": "Build dynamic forms based on zod schema or JSON",
  "module": "./dist/index.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./style.css": "./src/index.css",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "directory": "packages/form-kit",
    "type": "git",
    "url": "https://github.com/jfortez/form-kit.git"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "tailwind": "npx @tailwindcss/cli -i ./src/index.css -o ./src/globals.css --minify",
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "release": "pnpm build && pnpm version patch && pnpm publish --no-git-checks --access public"
  },
  "keywords": [
    "forms",
    "react-hook-form",
    "zod",
    "form-kit",
    "react"
  ],
  "author": "jfortez",
  "license": "MIT",
  "dependencies": {
    "@form-kit/radix": "workspace:*",
    "@form-kit/tailwind": "workspace:*",
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.30.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.60.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@form-kit/eslint-config": "workspace:*",
    "@form-kit/typescript-config": "workspace:*",
    "@storybook/react": "^9.0.16",
    "@storybook/react-vite": "9.0.16",
    "tsup": "^8.2.2",
    "typescript": "^5.8.3"
  }
}
